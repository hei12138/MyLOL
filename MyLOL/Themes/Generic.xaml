    <Style TargetType="control:ButtonForLOL">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="control:ButtonForLOL">
                    <Border Background="{TemplateBinding Background}" BorderThickness="{TemplateBinding BorderThickness}" BorderBrush="{TemplateBinding BorderBrush}" Padding="{TemplateBinding Padding}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Margin="12,0,0,0" Text="{TemplateBinding control:ButtonForLOL.MainText}" FontSize="20"/>
                            <StackPanel HorizontalAlignment="Right" Orientation="Horizontal" Grid.Column="1">
                                <TextBlock VerticalAlignment="Center" Text="{TemplateBinding control:ButtonForLOL.SecText}" Foreground="Gray" FontSize="15"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    

    <Style TargetType="control:TapButton" >
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="control:TapButton">
                    <Border CornerRadius="4" Padding="6" Background="{TemplateBinding Button.Background}">
                        <StackPanel Orientation="Vertical">
                            <Image Width="35" Source="{TemplateBinding control:TapButton.Source}">
                            </Image>
                            <TextBlock HorizontalAlignment="Center" Text="{TemplateBinding control:TapButton.Text}" FontSize="14" Margin="2"/>
                        </StackPanel>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
